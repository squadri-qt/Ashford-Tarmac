---
import RedLine from "./RedLine.astro"
const {title} = Astro.props
---
<div class="flex flex-1 flex-col lg:flex-row items-center text-white min-w-full relative">
    <div class="flex flex-col pr-14 pl-14 lg:w-1/3 lg:pr-0">
        <h3 class="md:text-3xl text-xl font-bold">{title}</h3>
        <RedLine />
        <div class="md:text-base text-sm"><slot name="content"/></div>
    </div>
    <div class="flex-1 pl-14 w-full box-border"><slot name="image" /></div>
</div>
