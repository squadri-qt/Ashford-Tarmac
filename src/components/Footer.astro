---
import PreFooter from "./PreFooter.astro";
import GetEstimateBtn from '../components/GetEstimateBtn.astro';
const currentYear = new Date().getFullYear();

---
<PreFooter></PreFooter>
<footer>
<div class="flex bg-gradient-to-b from-gray to-gray-dark h-full">
  <div class="bg-gradient-to-b from-gray to-gray-dark flex items-center justify-center w-14">
      <div class="flex flex-col items-start justify-center items-center"></div>
  </div>
  <div class="flex-grow flex-col">
    <div class="w-full block">
      <img class="mx-auto w-20 py-6" src="ashford-tarmac-symbol-red.svg" alt="Ashford Tarmac Symbol"/>
    </div>
    <div class="grid grid-cols-4">
      <div class="grid-col-1">
        <div class="text-sm">
          <h6>More Links</h6>
          <p>About Us</p>
          <p>Case Studies</p>
          <p>Gallery</p>
          <p>Reviews</p>
          <p>Blog</p>
          <p>Contact</p>
        </div>
      </div>
      <div class="grid-col-1">
        <div class="text-sm">
          <h6>Tarmac Articles</h6>
          <p>Driveway Costs</p>
          <p>Gates for driveways</p>
          <p>Maintaining your driveway</p>
        </div>
      </div>
      <div class="grid-col-1">
        <div class="text-sm">
          <h6>Contact Details</h6>
          <p>Mon-Fri 8am to 5pm</p>
          <p>Phone: 01233 733735<br />Fax: 01233 732319</p>
          <p>Ashford Tarmacadam <br />Contractors Ltd<br />Goodwin Capel Road<br />Ruckinge Near Ashford<br />Kent TN26 2EJ</p>
        </div>
      </div>
      <div class="grid-col-1">
        <div class="py-4">
          <GetEstimateBtn />
        </div>
      </div>
    </div>
    <div class="border-b border-red border-solid w-full pt-12"></div>
  </div>
  <div class="bg-gradient-to-b from-gray to-gray-dark flex items-center justify-center w-14">
      <div class="flex flex-col items-start justify-center items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75 12 3m0 0 3.75 3.75M12 3v18" />
          </svg>
          <p class="v-copy pt-2">back to top</p>
      </div>
  </div>
</div>
<div class="flex bg-gray-dark h-full">
    <div class="bg-gray-dark flex items-center justify-center w-14">
        <div class="flex flex-col items-start justify-center items-center">

        </div>
    </div>
    <div class="flex-grow flex justify-between h-14">
      <div class="flex-items"><span class="text-xs text-white">Copyright © {currentYear}</span></div>
      <div class="flex-items"><a href="https://quadweb.uk" class="text-xs text-white hover:text-red">Website by QUAD WEB</a></div>
    </div>
    <div class="bg-gray-dark flex items-center justify-center w-14">
        <div class="flex flex-col items-start justify-center items-center">

        </div>
    </div>
</div>
</footer>
