import type Chart from "flowbite-svelte/Chart.svelte";
---

<div class="flex bg-white bg-[url('/prefooterbackground.svg')] bg-no-repeat bg-bottom">
  <div class="border-r border-gray-light border-solid w-12"></div>
  <div class="flex-1">
      <div class="flex flex-col items-start justify-center items-center pt-24 pb-8">
          <p class="v-copy2 pr-12">get in touch</p>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-red">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25 12 21m0 0-3.75-3.75M12 21V3" />
          </svg>
      </div>
      <!-- main content -->
      <div>
        <div class="lg:grid lg:grid-cols-5 lg:gap-16 bg pb-96">
          <div class="col-span-3">
            <div class="grid grid-rows-2">
              <div class="row-span-1 pb-12">
                <h2 class="md:text-lg text-smh font-bold text-red pl-1">Customer satisfaction is out highest priority</h2>
                <h4 class="text-4xl  font-light md:text-6xl">Get In touch today and speak with our experts.</h4>
              </div>
              <div class="row-span-1 grid grid-cols-3">
                <div class="col-span-1 border-red border-r flex items-end justify-center">
                  <div class="pt-24">
                    <span class="md:font-medium md:text-6xl text-4xl mx-auto text-dark-gray pb-4 tracking-tighter">100%</span>
                    <p class="whitespace-nowrap md:pl-4 pt-6 my-0 md:text-base text-xs text-black">Client Satisfaction</p>
                  </div>
                </div>
                <div class="col-span-1 border-red border-r flex items-end justify-center">
                  <div class="pt-24">
                    <span class="md:font-medium text-4xl md:text-6xl mx-auto text-dark-gray md:font-medium pl-6">30</span><span class="v-copy">years</span>
                    <p class="whitespace-nowrap pt-6 my-0 md:text-base text-xs text-black">Experienced Team</p>
                  </div>
                </div>
                <div class="col-span-1 flex items-end justify-center">
                  <div class="pt-24">
                    <span class="text-4xl md:text-6xl text-dark-gray md:font-medium pl-6">45</span><span class="v-copy">years</span>
                    <p class="whitespace-nowrap pt-6 my-0 md:text-base text-xs text-black">Family run business</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- 2 columns on the right -->
          <div class="col-span-2 lg:pt-8 pt-24">
            <div class="grid grid-cols-2 gap-4">
              <div class="col-span-1 pt-12">
              <!-- content -->
                <div class="bg-gray rounded-lg px-4 pt-4 mb-4 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 mb-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 0 0 6 3.75v16.5a2.25 2.25 0 0 0 2.25 2.25h7.5A2.25 2.25 0 0 0 18 20.25V3.75a2.25 2.25 0 0 0-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
                  </svg>      
                  <span class="text-3xl font-bold text-white">One Click</span>
                  <span class="uppercase font-bold text-white">Call Now</span>
                  <p class="pt-8 pb-4">Let's Chat...</p>               
                </div>
                <div class="bg-black rounded-lg p-4 pb-10 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 mb-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 9.75a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H8.25m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H12m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0h-.375m-13.5 3.01c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.184-4.183a1.14 1.14 0 0 1 .778-.332 48.294 48.294 0 0 0 5.83-.498c1.585-.233 2.708-1.626 2.708-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
                  </svg>                    
                  <span class="pt-8 pb-0 text-3xl font-bold text-white">Reviews</span>
                  <span class="text-sm uppercase font-bold pb-8 text-white">Leeds Castle</span>
                  "Many thanks for such an excellent job. I have no hesitation in recommending you to anyone who asks"                  
                </div>
              </div>
              <div class="col-span-1">
                <div class="bg-red rounded-lg p-4 mb-4 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 mb-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>                        
                  <span class="pt-8 pb-0 text-3xl font-bold text-white">Callback</span>
                  <span class="text-sm uppercase font-bold pb-8 text-white">Schedule</span>
                  <p class="pt-8 pb-4">[FORM]</p>               
                </div>
                <div class="bg-gray-dark rounded-lg px-4 pt-4 mb-4 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 mb-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 0 1 .865-.501 48.172 48.172 0 0 0 3.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
                  </svg>                           
                  <span class="text-3xl font-bold text-white">Email Us</span>
                  <span class="uppercase font-bold text-white">Write Now" ;)</span>
                  <p class="pt-8 pb-4">Send your info</p>                             
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>
  <div class="border-l border-gray-light border-solid w-12"></div>
</div>

