---
import BaseLayout from "./BaseLayout.astro";
import GetEstimateBtn from '../components/GetEstimateBtn.astro';
import RedLine from '../components/RedLine.astro';
const { frontmatter } = Astro.props;
const text = "Back to archive";
---

<BaseLayout pageTitle={frontmatter.title}>
<!-- hero section --> 
 <div class="flex bg-no-repeat bg-cover" style={{ backgroundImage: `url(${frontmatter.heroImage.url})` }}>
    <div class="flex items-center justify-center border-r border-gray border-solid w-12 bg-black bg-opacity-80">
        <p class="v-copy text-gray py-2">{frontmatter.tags}</p>
    </div>
    <div class="flex-1 flex-col items-center justify-center">
        <div class="grid grid-cols-2 min-h-[40rem]">
            <div class="md:col-span-1 h-full md:pr-12 pb-4 md:pb-0 bg-black bg-opacity-80 md:bg-opacity-80 flex flex-col justify-center md:justify-center">
                <h1 class="uppercase md:text-7xl text-6xl font-bold md:font-bolder text-white col-span-2 text-center absolute inset-x-0 transform">{frontmatter.title}<br /><span class="underline decoration-red">{frontmatter.title2}</span></h1>
            </div>
            <div class="md:col-span-1 h-full bg-black bg-opacity-30 text-white flex flex-col items-center justify-center pb-16 md:py-24 md:pl-12 md:pr-8"></div>            
        </div>                                
    </div>
    <div class="flex items-center justify-center border-l border-gray border-solid w-12 bg-black bg-opacity-30"></div>
</div>
<!-- project details section --> 
<div class="flex bg-no-repeat bg-cover" style={{ backgroundImage: `url(${frontmatter.heroImage.url})` }}>
    <div class="border-r border-gray-dark md:border-gray border-solid w-12 bg-black bg-opacity-80 md:bg-opacity-30"></div>
    <div class="flex-1 flex-col items-center justify-center">
        <div class="grid md:grid-cols-2 grid-cols-1 min-h-[40rem]">
            <div class="md:col-span-1 h-full pt-16 md:pr-12 pb-4 md:pb-0 bg-black bg-opacity-80 md:bg-opacity-30 flex flex-col justify-end md:justify-start">
                <h2 class="text-3xl text-white">Project details</h2>
                <RedLine />
            </div>
            <div class="md:col-span-1 h-full bg-black bg-opacity-80 text-white flex flex-col items-center justify-center pb-16 md:py-24 md:pl-12 md:pr-8">
                <slot />
            </div>            
        </div>                                
    </div>
    <div class="flex items-center justify-center border-l border-gray border-solid w-12 bg-black bg-opacity-80"></div>
</div>
<!-- comment section -->
<div class="flex bg-white bg-no-repeat bg-right-bottom h-[50rem]" style={{ backgroundImage: `url(${frontmatter.quoteImage.url})` }}>
    <div class="border-r border-gray-light border-solid w-12 bg-white md:bg-transparent"></div>
        <div class="flex-1 flex-col items-center justify-center">
            <div class="h-full w-1/2 pt-48 pb-96 pr-6 md:pr-0 bg-white md:bg-transparent">
                <span class="font-bold text-2xl">“{frontmatter.quote}”</span>
                <RedLine />
                <p class="pt-12 capitalize"><span class="font-bold">Location:</span> {frontmatter.location}<br />
                <span class="font-bold">Client:</span> {frontmatter.client}</p>
            </div>
        </div>
    <div class="border-l border-gray-light border-solid w-12"></div>
</div>
<div class="flex bg-white">
    <div class="border-r border-gray-light border-solid w-12"></div>
        <div class="flex-1 flex-col items-center justify-center">
            <div class="flex flex-items-center justify-center py-12">
                <a href="/tarmac-case-study-archive"><GetEstimateBtn {text}/></a>
            </div>
        </div>
    <div class="border-l border-gray-light border-solid w-12"></div>
</div>
</BaseLayout>
