---
import BaseLayout from "./BaseLayout.astro";
import { fade } from "astro:transitions";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
<img transition:animate={fade({ duration: '0.5s' })} src={frontmatter.image.url} alt={frontmatter.image.alt} class="featuredImage"/>
<p>Written by <a href="/about/">{frontmatter.author}</a></p>
<p>Edited last:{frontmatter.pubDate.toString().slice(0,10)}</p>
<p transition:animate={fade({ duration: '0.5s' })}>Intro: {frontmatter.description}</p>
<div class="tags">
    {frontmatter.tags.map((tag) => (
    <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
</div>
<slot />
<a href=/blog>Back to blog</a>
</BaseLayout>
<style>
    a {
      color: #00539F;
    }
  
    .tags {
      display: flex;
      flex-wrap: wrap;
    }
  
    .tag {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #F8FCFD;
    }
  </style>