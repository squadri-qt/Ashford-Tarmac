---
import { getCollection } from "astro:content";
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';

const pageTitle = "Top-Quality Tarmac Services | New Driveways, Resurfacing, Repairs in Kent";
const pageDescription = "ransform your vision into reality with our top-quality tarmac services. Specialising in new driveways, resurfacing, repairs, and resin bound & bond services. Contact us for a tarmac estimate today!";
const pageKeywords = "Tarmac services, new driveways, resurfacing, tarmac repairs, resin bound services, bond services, kent";

const allPosts = await getCollection("posts");
---

<BaseLayout pageTitle = {pageTitle}, pageDescription = {pageDescription}, pageKeywords = {pageKeywords}>
	<div class="flex bg-white pt-24">
		<div class="border-r border-gray-light border-solid w-12"></div>
			<div class="flex-1 flex-col items-center justify-center">
				<h1 class="pb-6">{pageTitle}</h1>
				<ul>
					{allPosts.map((post) => <BlogPost url={`/posts/${post.slug}/`} title={post.data.title} />)}
				</ul>
			</div>
		<div class="border-l border-gray-light border-solid w-12"></div>
	  </div>
</BaseLayout>