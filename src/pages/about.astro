---
import BaseLayout from '../layouts/BaseLayout.astro';
import Clients from '../components/Clients.astro';
import GetEstimateBtn from '../components/GetEstimateBtn.astro';
import RedLine from '../components/RedLine.astro';
const pageTitle = "Trusted Tarmac Contractor - About Ashford Tarmac";
---

<BaseLayout pageTitle={pageTitle}>
<!-- hero section --> 
<div class="flex bg-black bg-[url('/blk_symb.svg')] bg-bottom bg-right bg-no-repeat">
    <div class="flex items-center justify-center w-12 border-r border-gray-dark border-solid"></div>
    <div class="flex-1 pt-24">
		<h1 class="text-white text-4xl font-light md:text-6xl pb-48 w-4/5">Welcome to AT - Your Trusted Tarmac Contractor</h1>
		<div class="md:flex md:flex-row md:gap-14 md:pr-24 gap-y-12">
			<div class="flex-item">
				<h2 class="text-gray uppercase font-bold tracking-wider">a reliable contractor</h2>
				<RedLine />
				<p class="text-white">We're not just another tarmac company – we're trusted by Domestic clients, Hospitals, Schools and Developers.</p>
			</div>
			<div class="flex-item pt-12 md:pt-0">
				<h2 class="text-gray uppercase font-bold tracking-wider">with solid foundations</h2>
				<RedLine />
				<p class="text-white">Since our inception in 1979, our family-run business has been dedicated to client satisfaction, honesty and value for money.</p>
			</div>
			<div class="flex-item pt-12 md:pt-0 pb-60">
				<h2 class="text-gray uppercase font-bold tracking-wider">with the knowledge you need</h2>
				<RedLine />
				<p class="text-white">At Ashford Tarmac, we blend decades of experience with a personal touch to provide you with an exceptional service.</p>
			</div>
		</div>
	</div>
    <div class="flex items-center justify-center w-12 border-l border-gray-dark border-solid"></div>
</div>
<!-- Your tarmac partner -->
<div class="flex bg-white">
    <div class="border-r border-gray-light border-solid w-12">
		<div class="flex flex-col justify-evenly h-full pt-24">
			<img src="/lc-grey.svg" class="md:w-[6rem] w-[3rem] h-auto transform -rotate-90" alt="">
			<img src="/abc-grey.svg" class="md:w-[6rem] w-[3rem] h-auto transform -rotate-90" alt="">
			<img src="/nt-grey.svg" class="md:w-[6rem] w-[3rem] h-auto transform -rotate-90" alt="">
			<img src="/ukc-grey.svg" class="md:w-[6rem] w-[3rem] h-auto transform -rotate-90"alt="">
			<img src="/ekc-grey.svg" class="md:w-[6rem] w-[3rem] h-auto transform -rotate-90" alt="">
		</div>
	</div>
    <div class="flex-1 flex-col items-center justify-center bg-white">
		<div class="flex flex-col items-start justify-center items-center pb-4 pt-24">
			<p class="v-copy2">your partner</p>
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-red mt-12">
				<path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25 12 21m0 0-3.75-3.75M12 21V3" />
			</svg>
		</div>
		<div class="md:w-2/5 mx-auto pb-14">
			<h1 class="text-3xl uppercase font-bolder text-center">your tarmac partner</h1>
			<RedLine />
			<p class="text-center text-black">The perfect guide to get you from rocky roads through too ultra smooth tarmac.</p>
		</div>
		<!-- tile section -->
		<div class="grid md:grid-cols-4 gap-0.5">
			<div class="col-span-2 row-span-2 h-96 md:h-full bg-black rounded-lg bg-[url('/company-mission.webp')] bg-center bg-no-repeat flex items-center justify-end p-4">
				<div class="flex flex-col w-2/6 h-full justify-end">
					<div class="h-full flex justify-end">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-red">
							<path stroke-linecap="round" stroke-linejoin="round" d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25" />
						</svg>						  
					</div>
					<div class="h-36 border-l border-red flex flex-col justify-end pl-2 text-xl font-bolder uppercase text-white">
						<h3>mission</h3>
					</div>
				</div>
			</div>
			<!-- box 2 -->
			<div class="col-span-2 row-span-1 bg-gray rounded-lg p-4 flex flex-col items-start">
				<div class="w-full flex justify-end mb-4">
