	<div class="row-span-2 col-span-1 rounded-lg bg-[url('/tarmac-line-painting.webp')] bg-no-repeat"></div>
	<div class="row-span-2 col-span-2 rounded-lg bg-[url('/housing-development-road-contractor.webp')] bg-no-repeat text-white p-4 pt-52">
		<h2 class="uppercase text-lg">your driveway reimagined</h2>
		<RedLine />
